{
  "name": "react-eventr",
  "license": "MIT",
  "version": "1.1.7",
  "private": false,
  "description": "Simple event hub for react",
  "author": "Jakub BlunÃ¡r",
  "homepage": "https://github.com/JakubBlunar/react-eventr",
  "bugs": {
    "url": "https://github.com/JakubBlunar/react-eventr/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakubBlunar/react-eventr.git"
  },
  "scripts": {
    "build": "cross-env yarn clean && rollup -c",
    "clean": "rimraf dist",
    "dev": "yarn storybook",
    "lint": "cross-env yarn lint:script",
    "lint:script": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --maxWorkers=2",
    "test:watch": "yarn test --watch",
    "test:coverage": "jest --coverage --colors --maxWorkers=2",
    "publish": "npx semantic-release --no-ci",
    "badge": "update-badge"
  },
  "main": "index.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "dependencies": {},
  "peerDependencies": {
    "lodash": "^4.17.21",
    "react": "^16.8.3 || ^17",
    "react-dom": "^16.8.3 || ^17",
    "react-redux": "^7.2.3",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.0.8",
    "@semantic-release/release-notes-generator": "9.0.3",
    "@storybook/react": "6.2.9",
    "@testing-library/react": "11.2.7",
    "@types/jest": "26.0.23",
    "@types/lodash": "4.14.170",
    "@types/node": "14",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.8",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "babel-loader": "8.2.2",
    "check-code-coverage": "1.9.3",
    "conventional-changelog-conventionalcommits": "4.6.0",
    "cross-env": "7.0.3",
    "css-loader": "5.2.6",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.0.4",
    "node-sass": "6.0.0",
    "postcss": "8.3.5",
    "prettier": "2.3.1",
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "redux": "4.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.52.1",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-postcss": "4.0.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "sass-loader": "10.1.1",
    "semantic-release": "17.3.0",
    "style-loader": "2.0.0",
    "ts-jest": "27.0.3",
    "ts-loader": "8.3.0",
    "typescript": "4.3.4",
    "webpack": "4.42.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.22.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "preset": "conventionalcommits",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "revert",
              "release": "patch"
            },
            {
              "type": "build",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# Changelog"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}",
          "assets": [
            "CHANGELOG.md",
            "README.md"
          ]
        }
      ]
    ]
  }
}
