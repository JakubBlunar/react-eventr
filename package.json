{
  "name": "react-eventr",
  "license": "MIT",
  "version": "0.0.0",
  "private": false,
  "description": "Simple event hub for react",
  "author": "Jakub BlunÃ¡r",
  "homepage": "https://github.com/JakubBlunar/react-eventr",
  "bugs": {
    "url": "https://github.com/JakubBlunar/react-eventr/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakubBlunar/react-eventr.git"
  },
  "scripts": {
    "build": "cross-env yarn clean && rollup -c",
    "clean": "rimraf dist",
    "dev": "yarn storybook",
    "lint": "cross-env yarn lint:script && yarn lint:style",
    "lint:script": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:style": "stylelint ./src",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --maxWorkers=2",
    "test:watch": "yarn test --watch",
    "test:coverage": "jest --coverage --colors --maxWorkers=2",
    "publish": "npx semantic-release --no-ci"
  },
  "main": "index.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.8.3 || ^17",
    "react-dom": "^16.8.3 || ^17",
    "react-redux": "^7.2.3",
    "redux": "^4.0.5",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "7.12.7",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@rollup/plugin-commonjs": "16.0.0",
    "@rollup/plugin-node-resolve": "10.0.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.0.8",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@storybook/react": "6.2.9",
    "@testing-library/react": "11.2.2",
    "@types/classnames": "2.2.11",
    "@types/jest": "26.0.15",
    "@types/lodash": "4.14.170",
    "@types/node": "12",
    "@types/react": "16.9.10",
    "@types/react-dom": "16.9.10",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "babel-loader": "8.2.1",
    "conventional-changelog-conventionalcommits": "4.4.0",
    "cross-env": "7.0.3",
    "css-loader": "5.0.1",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "node-sass": "5.0.0",
    "prettier": "2.2.0",
    "rimraf": "3.0.2",
    "rollup": "2.33.3",
    "rollup-plugin-copy": "3.3.0",
    "rollup-plugin-postcss": "3.1.8",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.29.0",
    "sass-loader": "10.1.0",
    "semantic-release": "17.3.0",
    "style-loader": "2.0.0",
    "stylelint": "13.8.0",
    "stylelint-config-standard": "20.0.0",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.11",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "redux": "4.0.5"
  },
  "engines": {
    "node": ">=12.0.0",
    "yarn": ">=1.22.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "preset": "conventionalcommits",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "revert",
              "release": "patch"
            },
            {
              "type": "build",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# Changelog"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}",
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  }
}
